<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PromoRandom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PromoRandom.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    @* Вывод header, только если флаг HideHeaderFooter не установлен *@
    @if (!(ViewBag.HideHeaderFooter ?? false))
    {
        <header class="bg-primary text-white py-2">
            <div class="container d-flex justify-content-between">
                <h1 class="text-white h4 mt-2">«ИМКОН» - Акция</h1>
                <div class="language-switcher text-end p-2">
                    <a href="?culture=ru">
                        <img src="~/image/flag-ru.png" alt="Русский" width="32" />
                    </a>
                    <a href="?culture=tg" class="ms-2">
                        <img src="~/image/flag-tj.png" alt="Тоҷикӣ" width="32" />
                    </a>
                </div>
            </div>
        </header>
    }

    @* Вывод footer, только если флаг HideHeaderFooter не установлен *@
    @if (!(ViewBag.HideHeaderFooter ?? false))
    {
        <footer class="bg-light text-center py-4 mt-5">
            &copy; 2025 Магазин «Имкон». Все права защищены.
        </footer>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
