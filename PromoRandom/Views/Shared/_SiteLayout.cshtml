@using System.Globalization

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>«ИМКОН» - Акция</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            scroll-behavior: smooth;
        }

        .flag-btn img {
            width: 32px;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="bg-primary text-white py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4 m-0">
                <a href="/Site/Index" class="text-white text-decoration-none">
                    «ИМКОН» - Акция
                </a>
            </h1>

            <div class="d-flex align-items-center">
                <a href="/Site/Statistics" class="btn btn-outline-light me-3">
                    <i class="bi bi-bar-chart"></i> Статистика
                </a>
                <div class="language-switcher text-end">
                    <a href="?culture=ru">
                        <img src="~/image/flag-ru.png" alt="Русский" width="32" />
                    </a>
                    <a href="?culture=tg" class="ms-2">
                        <img src="~/image/flag-tj.png" alt="Тоҷикӣ" width="32" />
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-4 mt-5">
        &copy; 2025 Магазин «Имкон». Все права защищены.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
