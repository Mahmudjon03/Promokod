@{
    ViewBag.Title = "Чархи «ИМКОН»";
    ViewBag.HideHeaderFooter = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Prize>
<div class="container">
    <select name="prizeId" id="prizeSelect">
        <option disabled selected value="">-- Интихоби приз --</option>
        @foreach (var prize in Model)
        {
            <option value="@prize.Id">@prize.Name</option>
        }
    </select>
    <h1> -- Чархи «ИМКОН» --</h1>
    <div class="promo-display" id="promoDisplay">
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
        <div class="reel"><div class="symbols">?</div></div>
    </div>
    <button class="generate-btn" id="generateBtn">Чарх</button>
</div>

<!-- modal okno -->
<div id="resultModal" class="modal">
    <div id="container"></div>
    <div class="modal-content">
        <h2 id="prizeTitle"></h2>
        <h3 style="font-size: 1.2rem; color:gold;">Вы выиграли этот приз!</h3>
        <div id="winnerName" class="winner-name"></div>
        <div id="promoCodeText" style="font-size: 1.2rem; color: gold; margin-top: 5px;"></div>
        <div class="btn-mok">
            <div style=" display:flex;">
                <button class="btn-next" onclick="location.href='/Home/Setting'">
                    <img src="~/image/setting.png" alt="Alternate Text" />
                </button>
                <button class="btn-next" id="updateBtn">
                    <img src="~/image/update.png" alt="Alternate Text" />
                </button>

            </div>
            <button class="btn-next" id="nextBtn">
                <img src="~/image/next.png" alt="Alternate Text" />
            </button>
        </div>
    </div>
</div>