@{
    ViewBag.Title = "Настройки Спинера";
Layout = null;
}

<style>
    .settings-container {
        max-width: 400px;
        margin: 40px auto;
        padding: 25px;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 12px;
        border: 2px solid gold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.4);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: gold;
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-top: 15px;
        font-weight: bold;
        color: #ffd700;
    }

    select, button {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 8px;
        border: none;
        font-size: 1rem;
        outline: none;
    }

    select {
        background-color: #333;
        color: white;
    }

    .btn-spin {
        background: linear-gradient(45deg, #ff0000, #ff8c00);
        color: white;
        font-weight: bold;
        margin-top: 25px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-spin:hover {
        background: linear-gradient(45deg, #cc0000, #cc6a00);
    }
</style>

<div class="settings-container">
    <h2>Настройки Спинера</h2>

    <label for="speedSelect">Скорость вращения:</label>
    <select id="speedSelect" name="speed">
        <option value="slow">Медленная</option>
        <option value="normal" selected>Обычная</option>
        <option value="fast">Быстрая</option>
    </select>

    <label for="prizeSelect">Приз (визуально):</label>
    <select id="prizeSelect" name="prize">
        <option value="phone">Телефон</option>
        <option value="car">Машина</option>
        <option value="money">Деньги</option>
    </select>

    <button class="btn-spin" onclick="alert('Визуально: Повторный спин! (Без логики)')">Повторно выкрутить</button>
</div>